<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.progra.vistas.actividades.ActividadArchivosSD">

    <EditText
        android:id="@+id/txtNombresSD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese sus nombres"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtApellidosSD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese sus apellidos"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lblSD"
        android:layout_width="match_parent"
        android:layout_height="46dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAgregarSD"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:text="Agregar" />

        <Button
            android:id="@+id/btnListarSD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listar" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSD"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>